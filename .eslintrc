{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "plugins": ["prettier", "import", "react"],
  "env": {
    "browser": true,
    "jest": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./src"]
      }
    }
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }],
    "quotes": ["error", "single"]
  }
}
